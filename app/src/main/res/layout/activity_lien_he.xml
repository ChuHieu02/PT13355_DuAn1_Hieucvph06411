<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LienHeActivity">

    <FrameLayout
        android:id="@+id/framelauot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="354dp">

        </fragment>
    </FrameLayout>

    <TextView
        android:id="@+id/tvlienhe"
        android:layout_width="69dp"
        android:layout_height="27dp"
        android:layout_below="@id/framelauot"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Liên Hệ"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imgfb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvlienhe"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/facebook" />

    <ImageView
        android:id="@+id/imggm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imgfb"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/gmail" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgfb"
        android:layout_alignParentStart="true"
        android:layout_marginStart="82dp"
        android:text="Chu Hiếu"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imggm"
        android:layout_alignParentStart="true"
        android:layout_marginStart="82dp"
        android:text="Hieucvph06411@gmail.com"
        android:textSize="14dp" />


</RelativeLayout>